<div class="container-fluid">
  <div class="card mx-auto w-50">
    <div class="card-body">
      <h1 class="card-title"><%= @team.name %></h1>
    </div>
    <div class="card-body">
      <h3 class="card-text">League: <%= link_to @team.league.name, league_path(@team.league)%></h3>

        <% if @team.paid%>
          <h4 class="card-text">Has paid. ðŸ¤‘</h4>
        <% else %>
          <h4 class="card-text">Still needs to pay. ðŸ˜’</h4>
          <div class="card-body">
            <%= button_to "Make payment now", payment_path %>
          </div>
        <% end %>
    </div>
    <div class="card-body">
      <h3>Roster</h3>
      <% @team.players.each do |player| %>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to player.name, player_path(player) %></li>
      </ul>
      <% end %>
    </div>
    <div class="card-body">
      <%= button_to "Join the #{@team.name}", add_to_teams_path(@team)%>
    </div>
  </div>
</div>
<br><br>
<div class="container-fluid text-center">
  <h5><%= link_to "Back to #{@team.league.city.name} Menu", city_path(@team.league.city) %></h5>
</div>
