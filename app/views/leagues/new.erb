<h1>Create a New League </h1>

<ul>
  <% if @errors %>
    <% @errors.each do |error| %>
    <li> <%= error %> </li>
    <% end %>
  <% end%>
</ul>

<%= form_for @league do |f| %>
  <%= f.label :city_id %>
  <%= f.collection_select(:city_id, City.all, :id, :name) %><br><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :sport %>
  <%= f.select :sport, %w(Soccer Basketball Softball Kickball Dodgeball Volleyball Hockey Football) %><br><br>
  <%= f.label :day_of_week %>
  <%= f.select :day_of_week, ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %><br><br>
  <%= f.label :cost %>
  <%= f.number_field :cost %><br><br>
  <%= f.label :level %>
  <%= f.select :level, ["Beginner", "Intermediate", "Experienced"] %><br><br>
  <%= f.submit %>

<% end %>
