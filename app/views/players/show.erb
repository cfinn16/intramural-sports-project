<div class="container-fluid">
  <div class="card mx-auto w-50">
    <div class="card-body">
      <h2 class="card-title"><%= @player.name %></h2>
    </div>

    <div class="card-body">
        <h4 class="card-text">Teams</h4>
        <% @player.teams.each do |team| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= link_to team.name, team_path(team) %></li>
          </ul>
        <% end %>
    </div>


    <div class="card-body">
      <p class="card-text">Contact: <%= @player.email %></p>
    </div>
  </div>
</div>
<br><br>

<div class="container-fluid text-center">
  <h5><%= link_to "Back", cities_path %></h5>
</div>
